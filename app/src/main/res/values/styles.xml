<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Small">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>

    <style name="Widget.GoBang.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:stateListAnimator">@null</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="Widget.GoBang.MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:textColor">@color/button_text_check</item>
        <item name="backgroundTint">@color/button_background_check</item>
    </style>

    <style name="Widget.GoBang.Material3.CompoundButton.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_material3</item>
        <item name="thumbTint">@color/switch_thumb_tint_material3</item>
        <item name="thumbTintMode">src_in</item>
        <item name="track">@drawable/switch_track_material3</item>
        <item name="trackTint">@color/switch_track_tint_material3</item>
    </style>
</resources>